{% extends 'SonataAdminBundle:CRUD:edit.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/nteagathokles/js/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/nteagathokles/js/leafletjs/leaflet.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        $( document ).ready(function() {
            $( ".col-md-2" ).removeClass("col-md-2").parents( ".form-group" ).addClass("col-md-2");
            $( ".col-md-3" ).removeClass("col-md-3").parents( ".form-group" ).addClass("col-md-3");
            $( ".col-md-4" ).removeClass("col-md-4").parents( ".form-group" ).addClass("col-md-4");
            $( ".col-md-5" ).removeClass("col-md-5").parents( ".form-group" ).addClass("col-md-5");
            $( ".col-md-6" ).removeClass("col-md-6").parents( ".form-group" ).addClass("col-md-6");
            $( ".col-md-9" ).removeClass("col-md-9").parents( ".form-group" ).addClass("col-md-9");
            $( ".col-md-10" ).removeClass("col-md-10").parents( ".form-group" ).addClass("col-md-10");
        });

    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/nteagathokles/js/leafletjs/leaflet.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/nteagathokles/css/z_admin.css') }}">
    <style>
        #map { height: 400px; border: 1px solid black; }
    </style>
{% endblock %}
