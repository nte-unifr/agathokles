    <script src="{{ asset('bundles/nteagathokles/js/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/nteagathokles/js/admin-fiches.js') }}" type="text/javascript"></script>
