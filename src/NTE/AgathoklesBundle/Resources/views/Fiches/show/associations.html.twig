{# src/NTE/AgathoklesBundle/Resources/views/Fiches/show/associations.html.twig #}

<div class="panel panel-default masonry-grid-item">
    <div class="panel-heading">
        <h3 class="panel-title">Associations</h3>
    </div>
    <div class="panel-body">
        {% if (fiche.matricePrincipale|length <= 0) and (fiche.matriceSecondaire|length <= 0) and (fiche.matriceComplementaire|length <= 0) %}
            <p>Aucune association</p>
        {% else %}
            <table class="table">
                {% if fiche.matricePrincipale|length > 0 %}
                    <tr>
                        <td><strong>Matrice<br> principale</strong></td>
                        <td>
                            {% for matrice in fiche.matricePrincipale %}
                                <p><a href="{{ path('matrice', { 'id': matrice.fichePrincipale.id }) }}">{{ matrice.fichePrincipale.__toString }}</a></p>
                            {% endfor %}
                        </td>
                    </tr>
                {% endif %}

                {% if fiche.matriceSecondaire|length > 0 %}
                    <tr>
                        <td><strong>Matrice<br> secondaire</strong></td>
                        <td>
                            {% for matrice in fiche.matriceSecondaire %}
                                <p><a href="{{ path('matrice', { 'id': matrice.ficheSecondaire.id }) }}">{{ matrice.ficheSecondaire.__toString }}</a></p>
                            {% endfor %}
                        </td>
                    </tr>
                {% endif %}

                {% if fiche.matriceComplementaire|length > 0 %}
                    <tr>
                        <td><strong>Matrice<br> compl√©mentaire</strong></td>
                        <td>
                            {% for matrice in fiche.matriceComplementaire %}
                                <p><a href="{{ path('matrice', { 'id': matrice.ficheComplementaire.id }) }}">{{ matrice.ficheComplementaire.__toString }}</a></p>
                            {% endfor %}
                        </td>
                    </tr>
                {% endif %}

                {% if fiche.remarquesAssociations %}
                    <tr>
                        <td><strong>Remarques</strong></td>
                        <td>
                            {{ fiche.remarquesAssociations }}
                        </td>
                    </tr>
                {% endif %}
            </table>
        {% endif %}
    </div>
</div>
