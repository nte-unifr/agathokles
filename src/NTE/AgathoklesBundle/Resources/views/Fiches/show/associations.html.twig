{# src/NTE/AgathoklesBundle/Resources/views/Fiches/show/associations.html.twig #}

<legend>Associations</legend>

{% if fiche.matricePrincipale|length > 0 %}
    <dl class="dl-horizontal">
        <dt>Matrice<br> principale</dt>
        <dd>
            {% for matrice in fiche.matricePrincipale %}
                <p><a href="{{ path('fiche', { 'id': matrice.fichePrincipale.id }) }}">{{ matrice.fichePrincipale.eponyme }} / {{ matrice.fichePrincipale.fabricant }} - T{{ matrice.fichePrincipale.typeNumero }} - M{{ matrice.fichePrincipale.matriceNumero }}</a></p>
            {% endfor %}
        </dd>
    </dl>
{% endif %}

{% if fiche.matriceSecondaire|length > 0 %}
    <dl class="dl-horizontal">
        <dt>Matrice<br> secondaire</dt>
        <dd>
            {% for matrice in fiche.matriceSecondaire %}
                <p><a href="{{ path('fiche', { 'id': matrice.ficheSecondaire.id }) }}">{{ matrice.ficheSecondaire.eponyme }} / {{ matrice.ficheSecondaire.fabricant }} - T{{ matrice.ficheSecondaire.typeNumero }} - M{{ matrice.ficheSecondaire.matriceNumero }}</a></p>
            {% endfor %}
        </dd>
    </dl>
{% endif %}

{% if fiche.matriceComplementaire|length > 0 %}
    <dl class="dl-horizontal">
        <dt>Matrice<br> compl√©mentaire</dt>
        <dd>
            {% for matrice in fiche.matriceComplementaire %}
                <p><a href="{{ path('fiche', { 'id': matrice.ficheComplementaire.id }) }}">{{ matrice.ficheComplementaire.eponyme }} / {{ matrice.ficheComplementaire.fabricant }} - T{{ matrice.ficheComplementaire.typeNumero }} - M{{ matrice.ficheComplementaire.matriceNumero }}</a></p>
            {% endfor %}
        </dd>
    </dl>
{% endif %}

{% if (fiche.matricePrincipale|length <= 0) and (fiche.matriceSecondaire|length <= 0) and (fiche.matriceComplementaire|length <= 0) %}
    <p>Aucune association</p>
{% endif %}
