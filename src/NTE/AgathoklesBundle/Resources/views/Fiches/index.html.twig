{# src/NTE/AgathoklesBundle/Resources/views/Fiches/index.html.twig #}

{% extends "NTEAgathoklesBundle:Default:layout.html.twig" %}

{% block timbres_active %}active{% endblock %}

{% block agathokles_content %}

    <div id="fiches" class="container">
        <div class="page-header">
          <h1>Timbres {% if subtitle is defined %}<small>{{ subtitle }}</small>{% endif %}</h1>
        </div>
        <div class="row">
            <div class="col-md-2">
                {% include 'NTEAgathoklesBundle:Fiches:index/subnav.html.twig' %}
            </div>
            <div class="col-md-10">
                {% include 'NTEAgathoklesBundle:Fiches:index/filters.html.twig' %}
                <p class="lead">
                    {{ pager|length }} timbres sur un total de {{ all }}.
                </p>
                <div class="masonry-grid row">
                    <div class="masonry-grid-sizer"></div>
                    {% for fiche in pager.currentPageResults %}
                        {% include 'NTEAgathoklesBundle:Fiches:index/fiche.html.twig' %}
                    {% endfor %}
                </div>
                {% if pager and pager.haveToPaginate %}
                    <div class="pagerfanta text-center">
                        {{ pagerfanta(pager, 'twitter_bootstrap3') }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}

{% block body_javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/nteagathokles/js/imagesloaded.pkgd.min.js') }}"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/masonry/3.3.2/masonry.pkgd.min.js"></script>
    <script type="text/javascript" src="{{ asset('bundles/nteagathokles/js/z_fiches.js') }}"></script>
{% endblock %}
