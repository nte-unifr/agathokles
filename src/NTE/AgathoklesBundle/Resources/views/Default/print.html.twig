                </dl>
                <dl class="dl-horizontal">
                    <dt>Retrogravure</dt>
                    <dd>
                        {{ fiche.retrogravure ? '<span class="glyphicon glyphicon-ok text-success" title="oui" aria-hidden="true"></span>' : '-' }}
                    </dd>
                </dl>
            </div>
        </div>

    <br><br><hr />
    <a href="{{ path('fiche', { 'id': fiche.id }) }}">{{ url('fiche', { 'id': fiche.id }) }}</a>
    <br><br>
</body>
