    <body>
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12 col-sm-6">
                    <img src="{{ asset('bundles/nteagathokles/img/bandeau_unifr_universite.jpg') }}" alt="Unifr">
                </div>
                <div class="col-xs-12 col-sm-6">
                    <div class="application-title">
                        Département des sciences historiques
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <nav class="navbar navbar-default">
                        <div class="container-fluid">
                            <!-- Brand and toggle get grouped for better mobile display -->
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-navbar-collapse">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                <a class="navbar-brand" href="{{ path('home') }}">Agathokles</a>
                            </div>

                            <!-- Collect the nav links, forms, and other content for toggling -->
                            <div class="collapse navbar-collapse" id="main-navbar-collapse">
                                <ul class="nav navbar-nav">
                                    <li class="{% block carte_active %}{% endblock %}"><a href="{{ path('home') }}">Carte</a></li>
                                    <li class="{% block timbres_active %}{% endblock %}"><a href="{{ path('timbres') }}">Timbres</a></li>
                                </ul>
                                <ul class="nav navbar-nav navbar-right">
                                    <li class="{% block faq_active %}{% endblock %}"><a href="{{ path('faq') }}">FAQ</a></li>
                                    <li class="{% block credits_active %}{% endblock %}"><a href="{{ path('credits') }}">Crédits</a></li>
                                    <li class="{% block contact_active %}{% endblock %}"><a href="{{ path('contact') }}">Contact</a></li>
                                </ul>
                            </div><!-- /.navbar-collapse -->
                        </div><!-- /.container-fluid -->
                    </nav>
                </div>
            </div>
        </div>

        {% block agathokles_content %}
        {% endblock %}

        {% block footer %}
            <div class="container">
                <div class="row">
                    <div class="application-footer">
                        &copy; Conception : N. Badoud &amp; <a href="http://www.unifr.ch/nte/">Centre DIT-NTE</a> - Université de Fribourg - Suisse<br>
