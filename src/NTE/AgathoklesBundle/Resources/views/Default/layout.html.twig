                    </div>
                </div>
            </div>
        {% endblock %}

        {% block body_javascripts %}
            <!-- Latest compiled and minified JavaScript -->
            <script src="{{ asset('bundles/nteagathokles/js/bootstrap.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/nteagathokles/js/agathokles.js') }}"></script>
        {% endblock %}

